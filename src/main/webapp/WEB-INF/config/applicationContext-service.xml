    />
    
    <bean id="iAdminService"
        class="com.iceroom.fundamental.service.impl.AdminService"
        p:userDao-ref="iUserDao"
        p:employerDao-ref="iEmployerDao"
        p:categoryDao-ref="iCategoryDao"
